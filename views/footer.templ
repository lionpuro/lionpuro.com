package views

import (
	"strconv"
	"time"
)

func yearString() string {
	y := time.Now().UTC().Year()
	return strconv.Itoa(y)
}

templ Footer() {
	<footer class="mt-auto flex items-center justify-between p-2 px-6 sm:px-8 text-sm">
		<span class="font-medium text-base-300">Â© { yearString() } Lion Puro</span>
		<div class="flex">
			<a
				href={ github_url }
				aria-label="github"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center gap-2 p-2 font-medium text-base-200 hover:text-base-50"
			>
				@iconGithub("size-6")
				<span class="max-sm:hidden">github</span>
			</a>
			<a
				href={ linkedin_url }
				aria-label="linkedin"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center gap-2 p-2 font-medium text-base-200 hover:text-base-50"
			>
				@iconLinkedin("size-6")
				<span class="max-sm:hidden">linkedin</span>
			</a>
		</div>
	</footer>
}
